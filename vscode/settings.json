    "editor.minimap.enabled": false,
    "explorer.confirmDelete": false,
    "files.autoSave": "onWindowChange",
    "workbench.iconTheme": "vscode-icons",
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "workbench.colorCustomizations": {
        "statusBar.background": "#B48EAD",
        "statusBar.noFolderBackground": "#B48EAD",
        "statusBar.debuggingBackground": "#B48EAD",
        "statusBar.foreground": "#434C5E",
        "statusBar.debuggingForeground": "#434C5E"
    },
    "editor.fontSize": 14,
    "editor.fontWeight": "500",
    "debug.console.fontSize": 14,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeight": "600",
    // "python.pythonPath": "/usr/local/bin/python3",
    "python.formatting.provider": "black",
    "editor.formatOnSave": false,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "code-runner.executorMap": {
        "python": "$pythonPath -u $fullFileName"
    },
    "code-runner.clearPreviousOutput": true,
    "code-runner.showExecutionMessage": false,
    "code-runner.saveFileBeforeRun": true,
    "zenMode.centerLayout": true,
    "zenMode.fullScreen": true,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "zenMode.hideTabs": false,
    "workbench.settings.openDefaultSettings": true,
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "newUntitledFile",
    "editor.tabSize": 4,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "sync.gist": "6ffdf9358fe661a84b3bfe77d0db035d",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "Ubuntu-20.04 (WSL)": {
            "path": "C:\\Windows\\System32\\wsl.exe",
            "args": [
                "-d",
                "Ubuntu-20.04"
            ]
        },
        "Windows PowerShell": {
            "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
        }
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnType": true
    },
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "editor.renderWhitespace": "all",
    "typescript.suggest.autoImports": false,
    "python.analysis.autoImportCompletions": false,
    "DockerRun.DisableAutoGenerateConfig": true,
    "editor.inlineSuggest.enabled": true,
    "notebook.lineNumbers": "on",
    "hediet.vscode-drawio.theme": "dark",
    "vim.useSystemClipboard": true,
    "cSpell.enabled": false,
    "window.zoomLevel": 1,
    "workbench.colorTheme": "One Dark Pro Darker",
